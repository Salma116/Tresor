--ui

function draw_ui()
	camera()
	spr(1,2,2)
	outline("X"..p.keys,10,2)
	
end

function outline(text,x,y)
	print(text,x-1,y,0)
	print(text,x+1,y,0)
	print(text,x,y-1,0)
	print(text,x,y+1,0)
	print(text,x,y,7)
end


	
